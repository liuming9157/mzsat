}
.pop_out{
  position: fixed;
  top:15%;
  left: 50%;
  transform: translate(-50%,0);
  z-index: 998;
   width: 80%;
  
    
}
.icon{
position: absolute;
bottom: -50px;
left: 50%;
transform: translate(-50%,0);
z-index: 999;

}
.line{
  position: absolute;
  width: 50%;
  height: 25px;
  bottom: -20px;
  border-right: 1px solid red;
  z-index: 999
}
.pop_out>image{
  width: 100%;
  height: 750rpx;
  z-index: 999
}
.cloud{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 1000px;
  opacity: 0.8;
  background-color: white
}